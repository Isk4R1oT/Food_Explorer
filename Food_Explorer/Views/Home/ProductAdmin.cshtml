@{
    ViewData["Title"] = "Product(Admin)";
}
<div class="product-container">
    <div class="product-container-back-link">
        <a href="/Home/CatalogAdmin">
            <img src="~/img/CaretLeft.svg" alt="">
            <h3 class="poppins-bold">back</h3>
        </a>
    </div>
    <div class="product-container-info">
        <img src="~/img/dish.png" alt="" class="product-container-info-dish">
        <div class="product-container-info-text">
            <h2 class="poppins-medium">Salada Ravanello</h2>
            <p class="poppins-regular">Rabanetes, folhas verdes e molho agridoce salpicados com gergelim. O pão naan dá um toque especial.</p>
            <div class="product-container-info-text-ingridients">
                <div class="product-container-info-text-ingridients-item">
                    <p class="poppins-medium">alface</p>
                </div>
                <div class="product-container-info-text-ingridients-item">
                    <p class="poppins-medium">cebola</p>
                </div>
                <div class="product-container-info-text-ingridients-item">
                    <p class="poppins-medium">pão naan</p>
                </div>
                <div class="product-container-info-text-ingridients-item">
                    <p class="poppins-medium">pepino</p>
                </div>
                <div class="product-container-info-text-ingridients-item">
                    <p class="poppins-medium">rabanete</p>
                </div>
                <div class="product-container-info-text-ingridients-item">
                    <p class="poppins-medium">tomate</p>
                </div>
            </div>
            <div class="product-container-info-text-actions-admin">
                <button type="submit" name="id" value="1" class="product-container-info-text-actions-button">
                    <p class="poppins-medium">Edit dish</p>
                </button>
            </div>
        </div>
    </div>
</div>