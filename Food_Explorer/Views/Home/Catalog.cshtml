@{
    ViewData["Title"] = "Catalog";
}
<div class="catalog-container">
    <div class="catalog-container-banner">
        <div class="catalog-container-banner-content">
            <div>
                <img src="~/img/pngegg 1.png" alt="">
            </div>
            <div class="catalog-container-banner-text">
                <h2 class="poppins-medium">Unsurpassed flavors</h2>
                <p class="roboto-regular">Feel the care of the preparation with the selected ingredients</p>
            </div>
        </div>
    </div>
    <div class="catalog-section">
        <h2 class="poppins-medium">Food</h2>
        <div class="catalog-section-slider">
            <div class="catalog-section-slider-shading">
                <div class="catalog-section-slider-shading-left">
                    <img src="~/img/CaretLeft.svg" onclick="moveFoodSlide(-1)">
                </div>
                <div class="catalog-section-slider-shading-right">
                    <img src="~/img/CaretRight.svg" onclick="moveFoodSlide(1)">
                </div>
            </div>
            <div class="catalog-section-slider-items" id="food-slider">
                @for (int i = 0; i < 10; i++)
                {
                    <form method="get" class="catalog-section-slider-items-item">
                        <img src="img/dish.png" alt="" class="catalog-section-slider-items-item-dish">
                        <h3 class="poppins-bold">Spaguetti Gambe  ></h3>
                        <p class="roboto-regular">Massa fresca com camarões e pesto.</p>
                        <h2 class="roboto-regular-big">$19,97</h2>
                        <div class="catalog-section-slider-items-item-actions">
                            <input type="text" name="type" value="food" style="display: none;">
                            <img class="catalog-section-slider-items-item-actions-minus" src="img/Minus.svg" alt="" onclick="changeQuantity(this, -1)">
                            <p class="catalog-section-slider-items-item-actions-count">01</p>
                            <input type="number" name="quantity" value="1" style="display: none;" class="catalog-section-slider-items-item-actions-count-value">
                            <img class="catalog-section-slider-items-item-actions-plus" src="img/Plus.svg" alt="" onclick="changeQuantity(this, 1)">
                            <button type="submit" name="id" value="1" class="catalog-section-slider-items-item-actions-button"><p class="poppins-medium">Add</p></button>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
