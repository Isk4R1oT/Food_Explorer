@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Product(Admin)";
    @model Product;
}
<div class="product-container">
    <div class="product-container-back-link">
        <a href="/Home/CatalogAdmin">
            <img src="~/img/CaretLeft.svg" alt="">
            <h3 class="poppins-bold">back</h3>
        </a>
    </div>
    <div class="product-container-info">
        <img src="data:image/png;base64,@Model.Image" alt="" class="product-container-info-dish">
        <div class="product-container-info-text">
            <h2 class="poppins-medium">@Model.Name</h2>
            <p class="poppins-regular">@Model.Description</p>
            <div class="product-container-info-text-ingridients">
                @foreach (var item in Model.Ingredients.Split(','))
                {
                    <div class="product-container-info-text-ingridients-item">
                        <p class="poppins-medium">@item</p>
                    </div>
                }
            </div>
            <div class="product-container-info-text-actions-admin">
                <button type="submit" name="id" value="@Model.Id" class="product-container-info-text-actions-button">
                    <p class="poppins-medium">Edit dish</p>
                </button>
            </div>
        </div>
    </div>
</div>