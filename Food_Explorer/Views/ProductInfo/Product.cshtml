@{
    ViewData["Title"] = "Product";
    @model Product;
}
<div class="product-container">
    <div class="product-container-back-link">
        <a href="/Home/Catalog">
            <img src="~/img/CaretLeft.svg" alt="">
            <h3 class="poppins-bold">back</h3>
        </a>
    </div>
    <div class="product-container-info">
        <img src="data:image/png;base64,@Model.Image" alt="" class="product-container-info-dish">
        <div class="product-container-info-text">
            <h2 class="poppins-medium">@Model.Name</h2>
            <p class="poppins-regular">@Model.Description</p>
            <div class="product-container-info-text-ingridients">
                @foreach(var item in Model.Ingredients.Split(','))
                {
                    <div class="product-container-info-text-ingridients-item">
                        <p class="poppins-medium">@item</p>
                    </div>
                }
            </div>
            <form class="product-container-info-text-actions">
                <img src="~/img/Minus.svg" alt="" onclick="changeQuantity(this, -1)">
                <p class="product-container-info-text-actions-count">01</p>
                <input type="number" value="1" name="quantity" style="display: none;" class="product-container-info-text-actions-count-value">
                <p style="display: none;" class="product-container-info-text-actions-price-perone">@Model.Price</p>
                <img src="~/img/Plus.svg" alt="" onclick="changeQuantity(this, 1)">
                <button type="submit" name="id" value="@Model.Id" class="product-container-info-text-actions-button">
                    <p class="poppins-medium">Add ∙ $</p>
                    <p class="poppins-medium product-container-info-text-actions-button-total">@Model.Price</p>
                </button>
            </form>
        </div>
    </div>
</div>
<script src="~/js/product.js"></script>